<%
ROOT   = if @class isnt 'home' then '../';
CSSMIN = if @init.settings.css.useMinify then 'min.' else '';
JSMIN  = if @init.settings.javascript.useMinify then 'min.' else '';
%>

<!doctype html>
<html lang="ja">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title><%= @title %> | <%= @init.metas.global.siteTitle %></title>
<% for name, cnt of @init.metas.defaults : %>
	<meta name="<%= name %>" content="<%= cnt %>">
<% end %>
<% for name, cnt of @init.metas.ogs : %>
	<meta name="<%= name %>" content="<%= cnt %>">
<% end %>
<% for name, cnt of @init.metas.twitter : %>
	<meta name="<%= name %>" content="<%= cnt %>">
<% end %>
	<link href="<%= ROOT %>css/style.<%= CSSMIN %>css" rel="stylesheet" media="screen and (min-width: 799px)">
	<link href="<%= ROOT %>css/sp.<%= CSSMIN %>css" rel="stylesheet" media="screen and (max-width: 798px)">
	<!--[if lt IE 9]>
	<script src="<%= ROOT %>js/ltIE8/html5shiv.js" type="text/javascript"></script>
	<script src="<%= ROOT %>js/ltIE8/selectivizr-min.js" type="text/javascript"></script>
	<![endif]-->
</head>
<body class="<%= @class %>">
	<div class="wrapper">
		<header id="header" class="header">
			<div class="container">
				<h1><%= @title %> | <%= @init.metas.global.siteTitle %> </h1>
				<p class="mt2"><%= @init.metas.defaults.description %></p>
				<% include 'partials/gnav.ect' %>
				<% include 'partials/breadcrumb-list.ect' %>
			</div><!-- /container -->
		</header><!-- /header -->

		<div class="contents">
			<% content %>
		</div><!-- /contents -->

		<footer id="footer" class="footer">
			<div class="container">
				<h2>copyright &copy; <%= @init.metas.global.siteTitle %></h2>
			</div><!-- /container -->
		</footer><!-- /footer -->
	</div><!-- /wrapper -->

	<script src="<%= ROOT %>js/jquery-1.11.3.min.js" type="text/javascript"></script>
	<script src="<%= ROOT %>js/bundle.<%= JSMIN %>js" type="text/javascript"></script>

</body>
</html>
